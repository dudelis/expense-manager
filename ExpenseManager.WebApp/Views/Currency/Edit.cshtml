@model CurrencyViewModel
@{
    ViewData["Title"] = "Edit Currency";
}

<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div class="form-group d-flex flex-row-reverse justify-content-between align-items-center">
                <button value="Save" class="btn btn-primary btn-sm"><i class="material-icons">save</i></button>
                <span class="font-weight-bold">@ViewData["Title"]</span>
                <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="material-icons">cancel</i></a>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <label class="form-control">@Model.Id</label>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>