@model CurrencyViewModel
@{
    ViewData["Title"] = "Edit Currency";
}
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-sm float-right" />
                <input asp-action="Index" type="submit" value="Cancel" class="btn btn-secondary btn-sm" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Code" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <label class="form-control">@Model.Code</label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>