@model ExpenseManager.WebApp.Models.AccountDto


<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div class="form-group d-flex flex-row-reverse justify-content-between">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                <span>New Account</span>
                <a asp-action="Index" class="btn btn-secondary btn-sm">Cancel</a>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconCode" class="control-label"></label>
                <input asp-for="IconCode" class="form-control" />
                <span asp-validation-for="IconCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyCode" class="control-label"></label>
                @*<input asp-for="CurrencyCode" class="form-control" />*@
                <select asp-for="CurrencyCode" class="form-control" 
                    asp-items="@(new SelectList(ViewBag.ListOfCurrencies, "Code", "Code"))">
                </select>
                <span asp-validation-for="CurrencyCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BalanceDate" class="control-label"></label>
                <input type="date" asp-for="BalanceDate" class="form-control" />
                <span asp-validation-for="BalanceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountTypeId" class="control-label"></label>
                <input asp-for="AccountTypeId" class="form-control" />
                <span asp-validation-for="AccountTypeId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IncludeInTotals" /> @Html.DisplayNameFor(model => model.IncludeInTotals)
                </label>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

