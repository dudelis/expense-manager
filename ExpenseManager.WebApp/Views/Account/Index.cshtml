@model IEnumerable<ExpenseManager.WebApp.Models.AccountViewModel>

@{ 
    ViewData["Title"] = "Accounts";
}
<h4>@ViewData["Title"]</h4>
<p>
    <a class="btn btn-primary btn-sm"  asp-action="Create">New Account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IconCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountTypeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IconCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BalanceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-toolbar btn-sm"><i class="material-icons">edit</i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-toolbar btn-sm"><i class="material-icons">delete</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
