@model IEnumerable<ExpenseManager.WebApp.Models.AccountViewModel>

@{ 
    ViewData["Title"] = "Accounts";
}
<div class="d-flex justify-content-between align-items-center">
    <h4>@ViewData["Title"]</h4>
    <a class="btn btn-primary btn-circle shadow btn-lg" asp-action="Create">
        <i class="material-icons">add</i>
    </a>
</div>
<div class="table-responsive-sm">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IconCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrencyCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BalanceDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountTypeId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IconCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrencyCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BalanceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountType.Name)
                    </td>
                    <td>
                        <div class="btn-toolbar float-right">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm"><i class="material-icons">edit</i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm"><i class="material-icons">delete</i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
